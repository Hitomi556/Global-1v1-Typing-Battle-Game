{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=neoncrypt-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy dist --project-name neoncrypt",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply neoncrypt-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply neoncrypt-production",
    "db:console:local": "wrangler d1 execute neoncrypt-production --local",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "git:commit": "git add . && git commit -m"
  },
  "dependencies": {
    "hono": "^4.10.3"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}